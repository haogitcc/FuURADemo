    <!--<UserControl.Resources>
        <Style TargetType="{x:Type Label}">
            <Setter Property="FontWeight" Value="DemiBold" />
        </Style>
    </UserControl.Resources>-->
    <StackPanel Orientation="Vertical" Name="spTagInspector" IsEnabled="False" HorizontalAlignment="Left">
        <StackPanel Orientation="Vertical" Margin="10" Visibility="Visible">
            <Label Margin="5" Name="lblNote" Content=" Note : Tag Inspector Operation supports only GEN2/ATA Tags. Rest of the protocols will be ignored"></Label>
            <GroupBox  Name="tagtoInspect"  Background="White">
                <GroupBox.Header>
                    <TextBlock FontWeight="Bold">Tag to Inspect</TextBlock>
                </GroupBox.Header>
                <StackPanel Name="grid1" Margin="5" Orientation="Vertical">
                    <StackPanel.Resources>
                        <BooleanToVisibilityConverter x:Key="boolToVisible"/>
                    </StackPanel.Resources>
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal" Name="stkSelectProtocol">
                            <Label Margin="3" Content="Select Protocol : " />
                            <RadioButton Margin="3" VerticalAlignment="Center" Name="rbtngen2" Content="GEN2" Checked="rbtngen2_Checked"/>
                            <RadioButton Margin="3" VerticalAlignment="Center" Name="rbtnata" Content="ATA" Checked="rbtngen2_Checked"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Orientation="Vertical">
                                <RadioButton Content="First tag to respond " GroupName="TagtoInspect" IsChecked="True" Margin="3" Name="rbFirstTagIns" Checked="rbFirstTagIns_Checked" />
                                <RadioButton ToolTipService.ShowOnDisabled="True" ToolTip="Go to Tag Results tab and right-click on a data cell"  Content="Tag selected in Tag Results page" GroupName="TagtoInspect" Margin="3" Name="rbSelectedTagIns" IsEnabled="False"/>
                            </StackPanel>
                            <Button Content="Read" Margin="30,3,3,3" Name="btnRead" Click="btnRead_Click" VerticalAlignment="Center" Width="75" />
                        </StackPanel>
                    </StackPanel>

                    <Grid Name="gdTagSelectionCriteria" Visibility="{Binding ElementName=rbSelectedTag, Path=IsChecked, Converter={StaticResource boolToVisible}}" HorizontalAlignment="Left" Width="Auto">
                        <StackPanel Orientation="Vertical" Margin="3">
                            <Label Margin="3" Name="lblSelectFilter" Content="Showing tag:" FontWeight="Normal"/>
                            <Label Margin="3" Content="Error" Name="lblTagInspectorError" Visibility="Collapsed" Foreground="#FFF60909" OpacityMask="#FFFA0000" />
                        </StackPanel>
                        <TextBox Height="23" Margin="0,21,71,0" Name="txtEpc" VerticalAlignment="Top" Visibility="Collapsed" HorizontalAlignment="Right" Width="28" />
                        <TextBox Height="23" HorizontalAlignment="Left" Margin="647,21,0,0" Name="txtData" VerticalAlignment="Top" Visibility="Collapsed" Width="28" />
                    </Grid>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <StackPanel Orientation="Vertical" Margin="10,-7,10,10" Name="spTagInspector_ATA" IsEnabled="True">
            <StackPanel.Resources>
                <Style TargetType="{x:Type StackPanel}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=rbtnata, Path=IsChecked}" Value="False">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="FontWeight" Value="DemiBold" />
                </Style>
            </StackPanel.Resources>
